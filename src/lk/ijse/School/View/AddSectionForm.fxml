                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button layoutX="338.0" layoutY="176.0" mnemonicParsing="false" onAction="#addCancelSectionOnAction" prefHeight="26.0" prefWidth="100.0" styleClass="button-three" text="Cancel" textFill="RED">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </AnchorPane>
   </children>
</AnchorPane>
